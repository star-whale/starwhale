{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictFunctionTypes": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "typeRoots": [
      "./types",
      "./node_modules/@types",
    ],
    "types": [
      "vite/client",
      "node",
      "jest"
    ],
  },
  "include": [
    "src",
    "types",
    "packages"
  ],
  "exclude": [
    "baseui/**",
    "node_modules/**",
    "**/stories/**",
    "**/iconfont.js",
    "**/__generated__/**",
    // "**/__tests__/**",
    "**/build/**",
    "packages/starwhale-ui/src/base/**/*",
  ]
}
