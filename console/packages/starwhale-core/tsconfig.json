{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "./compiled",
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "rootDirs": ["."],
    "noFallthroughCasesInSwitch": true,
    "jsx": "react-jsx",
    "skipLibCheck": true
  },
  "exclude": ["dist/**/*"],
  "extends": "./tsconfig.base.json",
  "include": [
    "src/**/*.ts*",
    "../../public/app/types/jquery/*.ts",
    "../../public/app/types/*.d.ts",
  ]
}

