<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="ai.starwhale.mlops.domain.job.mapper.BaseImageMapper">
    <select id="listBaseImages" resultMap="baseImageResultMap">
        select id as image_id,
               image_name,
               created_time as image_created_time,
               modified_time as image_modified_time
        from base_image
        <if test="imageName != null and imageName != ''">
            where image_name like concat(#{imageName}, '%')
        </if>
        order by id desc
    </select>

    <insert id="createBaseImage" parameterType="ai.starwhale.mlops.domain.job.BaseImageEntity" useGeneratedKeys="true" keyProperty="id">
        insert into base_image(image_name) values(#{image.imageName})
    </insert>

    <delete id="deleteBaseImage" parameterType="java.lang.Long">
        delete from base_image where id = #{id}
    </delete>

    <delete id="deleteBaseImageByName" parameterType="java.lang.String">
        delete from base_image where image_name = #{name}
    </delete>

    <resultMap id="baseImageResultMap" type="ai.starwhale.mlops.domain.job.BaseImageEntity" >
        <id property="id" column="image_id" />
        <result property="imageName" column="image_name" />
        <result property="createdTime" column="image_created_time" />
        <result property="modifiedTime" column="image_modified_time" />
    </resultMap>
</mapper>